{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.cjs",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "metro.config.js",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules"]
}
